@model Blog

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}




<div style="width:2000px !important">
    <h1>Edit</h1>
    <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" style="width:350px;">
            <span class="text-danger" asp-validation-for="Name" type="text"></span>
        </div>
        <div class="form-group my-2">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="@ViewBag.selectlist"></select>
            <span class="text-danger" asp-validation-for="CategoryId"></span>
        </div>
        @for (int i = 0; i < Model.BlogSpesifications.Count(); i++)
        {
            <div class="form-group my-2">
                <label asp-for="@Model.BlogSpesifications.Where(m=>!m.IsDeleted).ToList()[i].Photo">Image:</label>
                <br />
                <img src="~/assets/img/blog/@(Model.BlogSpesifications.Where(m=>!m.IsDeleted).ToList()[i].Image);" alt="Alternate Text" style="width:100px; height:100px;" />
                <input class="form-control" asp-for="@Model.BlogSpesifications.Where(m=>!m.IsDeleted).ToList()[i].Photo" style="width:350px;" />
                <span class="text-danger" asp-validation-for="@Model.BlogSpesifications.Where(m=>!m.IsDeleted).ToList()[i].Photo"></span>
            </div>
            <div>
                <label asp-for="@Model.BlogSpesifications.Where(m=>!m.IsDeleted).ToList()[i].BlogText">Text: </label>
                <textarea class="form-control CategoryText" asp-for="@Model.BlogSpesifications.Where(m=>!m.IsDeleted).ToList()[i].BlogText" style="width:650px; height:200px;"></textarea>
                <span class="text-danger" asp-validation-for="@Model.BlogSpesifications.Where(m=>!m.IsDeleted).ToList()[i].BlogText"></span>
                <a asp-controller="blog" asp-action="edit" asp-route-blogId="@Model.Id" asp-route-blogSpecificationId="@Model.BlogSpesifications.Where(m=>!m.IsDeleted).ToList()[i].Id">-</a>
            </div>

        }
        @for (int i = Model.BlogSpesifications.Where(m => !m.IsDeleted).Count(); i < (Model.BlogSpesifications.Where(m=>!m.IsDeleted).Count()); i++)
        {
            <div class="form-group my-2">
                <label asp-for="@Model.BlogSpesifications[i].Photo">Image:</label>
                <br />
                @*<img src="~/assets/img/blog/@(Model.BlogSpesifications.Where(m=>!m.IsDeleted).ToList()[i].Image);" alt="Alternate Text" style="width:100px; height:100px;" />*@
                <input class="form-control" asp-for="@Model.BlogSpesifications[i].Photo" style="width:350px;" />
                <span class="text-danger" asp-validation-for="@Model.BlogSpesifications[i].Photo"></span>
            </div>
            <div>
                <label asp-for="@Model.BlogSpesifications[i].BlogText">Text: </label>
                <textarea class="form-control CategoryText" asp-for="@Model.BlogSpesifications[i].BlogText" style="width:650px; height:200px;"></textarea>
                <span class="text-danger" asp-validation-for="@Model.BlogSpesifications[i].BlogText"></span>
            </div>
        }

        <a asp-controller="blog" asp-action="edit" asp-route-blogId="@Model.Id" asp-route-blogSpecRow="@(ViewBag.blogSpecRow)">+</a>

        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationPartialView" />

    <script src="~/ckeditor/ckeditor.js"></script>

    <script>
        CKEDITOR.replace("CategoryText")
    </script>
}




