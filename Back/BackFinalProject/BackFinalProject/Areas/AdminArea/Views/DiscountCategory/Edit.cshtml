@model DiscountCategroy
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <form class="forms-sample" method="post" asp-controller="DiscountCategory" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <input type="hidden" asp-for="@Model.Id" value="@Model.Id"/>
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" style="width:350px;" maxlength="100">
            <span class="text-danger" asp-validation-for="Name" type="text"></span>
        </div>
        <div>
            <img src="~/assets/img/categoriesDiscount/@Model.Image" style=" width:100px; height:100px;" alt="Alternate Text" />
            <label asp-for="Photo">Images: </label>
            <input class="form-control" asp-for="Photo" style="width:350px;">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div class="form-group my-2">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="@ViewBag.GetCategories"></select>
            <span class="text-danger" asp-validation-for="CategoryId"></span>
        </div>
        <div class="form-group">
            <label asp-for="DiscountCategoryText"></label>
            <textarea class="form-control" asp-for="DiscountCategoryText" style="width:350px;" id="CategoryText"></textarea>
            <span class="text-danger" asp-validation-for="DiscountCategoryText" type="text"></span>
        </div>

        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationPartialView" />

    <script src="~/ckeditor/ckeditor.js"></script>

    <script>
        CKEDITOR.replace("CategoryText")
    </script>
}

