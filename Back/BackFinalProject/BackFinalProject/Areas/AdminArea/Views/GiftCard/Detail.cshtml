@model GiftCard
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h1>Detail</h1>
    <div class="form-group">
        <h3>Category Name</h3>
        <p>@Model.Name</p>
    </div>
    <div class="form-group">
        <h3>Gift Image</h3>
        <div>
            <img src="~/assets/img/giftCard/@Model.Image" alt="Category Image" />
        </div>
    </div>

</div>

