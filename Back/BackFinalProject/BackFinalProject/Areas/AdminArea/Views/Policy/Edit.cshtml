@model PolicySection
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h1>Edit</h1>
    <form class="forms-sample" method="post" asp-controller="policy" asp-action="Edit" asp-route-policyId="@Model.Id" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" style="width:350px;">
            <span class="text-danger" asp-validation-for="Name" type="text"></span>
        </div>
        <div class="form-group">
            <label asp-for="Detail"></label>
            <textarea class="form-control" asp-for="Detail" style="width:350px;" id="PolicyText"></textarea>
            <span class="text-danger" asp-validation-for="Detail" type="text"></span>
        </div>

        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationPartialView" />

    <script src="~/ckeditor/ckeditor.js"></script>

    <script>
        CKEDITOR.replace("PolicyText")
    </script>
}

