@model SubCategory
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}



<div class="container">
    <h1>Detail</h1>
    <div class="form-group">
        <h3>Category Name</h3>
        <p>@Model.Category.Name</p>
    </div>
    <div class="form-group">
        <h3>SubCategory Name</h3>
        <p>@Model.Name</p>
    </div>
    <div class="form-group">
        <h3>SubCategory Text</h3>
        <p>@Html.Raw(Model.SubCategoryText)</p>
    </div>
    <div class="form-group">
        <h3>SubCategory Image</h3>
        <div>
            <img src="~/assets/img/subCategory/@Model.Image" alt="SubCategory Image" />
        </div>
    </div>

</div>
