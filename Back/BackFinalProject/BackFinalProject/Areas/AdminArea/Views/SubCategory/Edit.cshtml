@model SubCategory
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <form class="forms-sample" method="post" asp-controller="SubCategory" asp-action="Edit" asp-route-Id="@Model.Id" enctype="multipart/form-data">
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" style="width:350px;" maxlength="100">
            <span class="text-danger" asp-validation-for="Name" type="text"></span>
        </div>
        <input type="hidden" name="name" asp-for="Image" value="" />

        <div>
            <label asp-for="Photo">Images: </label>
            <img src="~/assets/img/subCategory/@Model.Image" alt="Alternate Text" />
            <input class="form-control" asp-for="Photo" style="width:350px;">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div class="form-group my-2">
            <label asp-for="CategoryID"></label>
            <select asp-for="CategoryID" asp-items="@ViewBag.SelectList"></select>
            <span class="text-danger" asp-validation-for="CategoryID"></span>
        </div>
        <div>
            <label asp-for="SubCategoryText">Images: </label>
            <textarea class="form-control" asp-for="SubCategoryText" style="width:350px;" id="SubCategoryText"></textarea>
            <span class="text-danger" asp-validation-for="SubCategoryText"></span>
        </div>
        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationPartialView" />

    <script src="~/ckeditor/ckeditor.js"></script>

    <script>
        CKEDITOR.replace("SubCategoryText")
    </script>
}



