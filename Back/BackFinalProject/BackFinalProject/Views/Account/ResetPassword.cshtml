@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
}



<div class="login-register py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-12 my-2 login-register-in">
                <div class="login-register-inner">
                    <h4>
                        Hesaba Giriş
                    </h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form class="pt-3" method="post" asp-controller="account" asp-action="ResetPassword">
                        <div class="form-group">
                            <input asp-for="NewPassword" class="form-control form-control-lg my-1" id="exampleInputUsername1" placeholder="Password ...">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ConfirmNewPassword" class="form-control form-control-lg my-1" id="exampleInputUsername1" placeholder="Confirm password ...">
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="Token" name="token" value="@Model.Token" />
                        <input type="hidden" asp-for="Email" name="email" value="@Model.Email" />
                        <div class="login-forget-buttons">
                            <button class="btn btn-primary">
                                Şifrəni Yenilə
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6 col-12 my-2">
                <div class="create-account">
                    <div class="row">
                        <div class="col-8">
                            <h4 class="mb-2 ">Hesab Yarat</h4>
                            <ul>
                                <li class="mb-2">Sifariş tarixini saxla</li>
                                <li class="mb-2">İstək listinizə məhsul əlavə edin</li>
                                <li class="mb-2">Gələcəkdə satın alma işləmləriniz üçün bilgi saxlayın</li>
                            </ul>
                            <a asp-controller="Account" asp-action="register" class="btn btn-outline-primary mt-3 create-account-button"> Hesab Yarat</a>
                        </div>
                        <div class="col-4 text-end d-flex justify-content-end align-items-center " style="height: 200px;">
                            <img src="~/assets/img/logo/loginImg.jpg" alt="login-image" class="me-3" style="width: 50%; height: 100px; border-radius: 50%;">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


