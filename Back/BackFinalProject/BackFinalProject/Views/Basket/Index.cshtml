@model List<BasketDetailVM>
@{
    ViewData["Title"] = "Index";
    int count = 1;
    decimal price = 0;
}




<div class="container">
    <div class="row">
        <div class="header d-flex justify-content-between mt-3">
            <h1>Basket</h1>

        </div>
        @if (Model == null)
        {
            <p>There is no product added basket</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Number
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Count
                            </th>
                            <th>
                                Price
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    <img src="~/assets/img/products/@item.Product.ProductImages.FirstOrDefault().Image" height="50" width="50" />
                                </td>
                                <td>
                                    @item.Product.Name
                                </td>
                                <td>
                                    @item.ProductCount
                                </td>
                                @if (item.Product.Discount == 0)
                                {
                                    <td>
                                        @Math.Truncate(item.Product.RealPrice * item.ProductCount) AZN
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        @Math.Truncate(item.Product.RealPrice * (100 - item.Product.Discount) / 100 * item.ProductCount) AZN
                                    </td>
                                }

                            </tr>
                            count++;
                            if (item.Product.Discount == 0)
                            {
                                price += item.Product.RealPrice;
                            }
                            else
                            {
                                price += item.Product.RealPrice * (100 - item.Product.Discount) / 100;
                            }


                        }

                        <h3>Total Price: @Math.Truncate(price)</h3>

                    </tbody>
                </table>
            </div>
        }

    </div>
</div>

