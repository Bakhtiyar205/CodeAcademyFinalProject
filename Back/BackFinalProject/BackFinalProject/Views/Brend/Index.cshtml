@model BrendsVM
@{
    ViewData["Title"] = "Index";
}

<div class="home-navigation my-3">
    <div class="container">
        <a asp-controller="home" asp-action="index">Ana səhifə</a>/
        <a>Brendlər</a> /
    </div>
</div>

<div class="secondary-home">
    <div class="container">
        <div class="text-center">
            <div class="row">
                <div class="col-12">
                    <h4 class="main-text">JYSK Blog</h4>

                    <p>
                        Bloqlarımıza göz atın və ən yaxşı trendlər, daxili fikirlərdən və rahat gece yuxusu almaqla
                        bağlı ipuçları əldə edin.
                    </p>

                    <ul class="d-flex justify-content-md-center justify-content-between">
                        <li class="px-md-5">
                            <a href="#">
                                Ilham
                            </a>
                        </li>
                        <li class="px-md-5">
                            <a asp-controller="blog" asp-action="index">
                                Blog
                            </a>
                        </li>
                        <li class="px-md-5">
                            <a href="#">
                                Bələdçi
                            </a>
                        </li>
                        <li class="px-md-5">
                            <a style="font-weight:bold;">
                                Brend Üzrə Axtarış
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="brends">
    <div class="container">
        <div class="categories">
            <div class="row">

                @foreach (var brend in Model.Brends)
                {
                    <div class="col-md-4 col-12 mb-2">
                        <div class="category">
                            <a asp-controller="brend" asp-action="brenddetail" asp-route-brendId="@brend.Id">
                                <img src="~/assets/img/brendSearch/@brend.Image" alt="category-image">
                            </a>
                            <div class="category-header">
                                @brend.Name
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>

    </div>
</div>


